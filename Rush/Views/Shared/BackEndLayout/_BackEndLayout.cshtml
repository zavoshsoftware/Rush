    <script type="text/javascript">
        $(document).ready(function () {
            var URL = window.location.pathname;

            if (URL.includes('/Users')) {
                $('.menuitem').removeClass('active');
                $('#userLi').addClass('active');
            }

            else if (URL.includes('/Blogs') || URL.includes('/BlogGroups')) {
                $('.menuitem').removeClass('active');
                $('#blogLi').addClass('active');
            }
            else if (URL.includes('/ServiceGroups') || URL.includes('/Services')) {
                $('.menuitem').removeClass('active');
                $('#serGLi').addClass('active');
            }
            else if (URL.includes('/TextTypes') || URL.includes('/texts')) {
                $('.menuitem').removeClass('active');
                $('#textLi').addClass('active');
            }
            else if (URL.includes('/Teams')) {
                $('.menuitem').removeClass('active');
                $('#teamLi').addClass('active');
            }
            else if (URL.includes('/Newsletters')) {
                $('.menuitem').removeClass('active');
                $('#newsLi').addClass('active');
            }
            else if (URL.includes('/Customers')) {
                $('.menuitem').removeClass('active');
                $('#custLi').addClass('active');
            }
            else if (URL.includes('/ContactForms')) {
                $('.menuitem').removeClass('active');
                $('#conLi').addClass('active');
            }
            else if (URL.includes('/SiteTypes')) {
                $('.menuitem').removeClass('active');
                $('#siteLi').addClass('active');
            }
            else if (URL.includes('/ServiceTypes')) {
                $('.menuitem').removeClass('active');
                $('#serTypeLi').addClass('active');
            }
            else if (URL.includes('/Reportage')) {
                $('.menuitem').removeClass('active');
                $('#reportLi').addClass('active');
            }
            else if (URL.includes('/AskedQuestions')) {
                $('.menuitem').removeClass('active');
                $('#quesLi').addClass('active');
            }
            else if (URL.includes('/order')) {
                $('.menuitem').removeClass('active');
                $('#orderLi').addClass('active');
            }

        });
