@model ViewModels.CallBackViewModel
@{
    ViewBag.Title = "سبد خرید";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<div class="page-wrapper" id="sellPage">
<div class="header-top"></div>
<section class="page-title" style="background: url(/images/background/2.jpg);">
	<div class="container text-center">
		<div class="title">
			<h2 class="black">نتیجه پرداخت</h2>
		</div>
		<ul class="title-manu">
			<li><a href="/">صفحه اصلی</a></li>
			<li>></li>
			<li>نتیجه پرداخت</li>
		</ul>
	</div>
</section>
<section class="gallery-details sg-detail" id="basket">
	<div class="container">
		<div class="col-lg-10 col-md-10 col-xs-12 col-md-push-1 report">
			<div class="panel panel-primary">
				<div class="panel-heading">
					نتیجه پرداخت			
				</div>
				<div class="panel-body">
					@if (Model.IsSuccess)
					{
						<p class="heading-color mb--30 text-center alert alert-success">
							پرداخت سفارش شما با موفقیت انجام شد
						</p>
						<div class="panel panel-primary">
							<div class="panel-heading text-right">اطلاعات پرداحت</div>
							<div class="panel-body text-right">
								<table class="table table-hover" style="direction: rtl;">
									<tbody>
												 
									<tr>
										<td>شماره فاکتور: </td>
										<td>@Model.OrderCode </td>
									</tr>
									<tr>
										<td>شماره پیگیری: </td>
										<td>@Model.RefrenceId </td>
									</tr>
														
													 

									</tbody>
								</table>

								<div class="alert alert-info">
									<p>
										با تشکر از خرید شما
									</p>
												 

								</div>
							</div>
						</div>

					}
					@if (!Model.IsSuccess)
					{
						<p class="heading-color mb--30 text-center alert alert-danger">
							خطا در انجام عملیات پرداخت
						</p>
						<div class="panel panel-primary">
							<div class="panel-heading text-right">اطلاعات پرداحت</div>
							<div class="panel-body text-right">
								<table class="table table-hover">
									<tbody>
									<tr>
										<td>کد خطا: </td>
										<td>@Model.RefrenceId </td>
									</tr>


									</tbody>
								</table>
								<p>
									کاربر گرامی در صورتی که مبلغ سفارش از حساب شما کسر شده است، حداکثر ظرف مدت 72 ساعت به حساب شما باز خواهد گشت. در صورت مشکل با شماره تلفن پشتیبانی تماس بگیرید.
								</p>
							</div>
						</div>

					}
				</div>
			
			</div>

			 
		
		</div>
	</div>
</section>


@section scripts{
	<script src="~/Scripts/FrontEndLayout/custom-shop.js"></script>
}