@model ViewModels.LoginViewModel
@{
		ViewBag.Title = "ورود";
		Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<div class="header-top"></div>
<!--Page Title-->
<section class="page-title" style="background: url(/images/background/2.jpg);">
	<div class="container text-center">
		<div class="title">
			<h4>ورود</h4>
		</div>
		<ul class="title-manu">
			<li><a href="/">صفحه اصلی</a></li>
			<li>></li>
			<li>ورود</li>
		</ul>
	</div>
</section>
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
{
		@Html.AntiForgeryToken()
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-sm-10 col-sm-offset-1 col-xs-12  col-md-offset-3 login">
					<div class="login-header">
						ورود به وب سایت
					</div>
					<div class="login-form" id="login-form">

						<div class="alert alert-info" id="error-box-login"></div>
						<div class="form-group">
							<label for="Username">شماره موبایل</label>
							<div>

								@Html.TextBoxFor(m => m.Username, null, new { @class = "form-control", @placeholder = "شماره موبایل" })
								@Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })

							</div>
						</div>
						<div class="form-group">
							<label for="Password">کلمه عبور</label>
							<div>

								@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "کلمه عبور" })
								@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })

							</div>
						</div>
						<button type="submit" id="btn-login" class="btn btn-savadimo-login">ورود</button>
					</div>


				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-10 col-sm-offset-1 col-xs-12  col-md-offset-3 login-footer">
					جهت دسترسی به پنل کاربری خود باید وارد وب سایت شوید.
					<br />
					<a href="/register">ثبت نام در سایت</a>
				</div>
			</div>
		</div>

}